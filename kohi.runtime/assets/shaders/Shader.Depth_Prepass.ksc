version = 1
depth_test=true
depth_write=true
colour_read=false
colour_write=false
cull_mode="back"

attachments = {
	depth = {
		name = "depth_buffer"
		format = "D24"
	}
	stencil = {
		name = "stencil_buffer"
		format = "S8"
	}
}

pipelines = [
	{
		name = "static geometry"
		stages = [
			{
				type = "vertex"
				source_asset_name = "Shader.Depth_Prepass_vert"
				package_name = "Kohi.Runtime"
			}
		]
		attributes = [
			{
				name = "in_position"
				type = "vec3"
			}
			{
				name = "in_normal"
				type = "vec3"
			}
			{
				name = "in_texcoord"
				type = "vec2"
			}
			{
				name = "in_colour"
				type = "vec4"
			}
			{
				name = "in_tangent"
				type = "vec4"
			}
		]
	}	
]

binding_sets = [
    {
        name = "depth prepass model global binding set"
        max_instance_count = 1
        bindings = [
            {
                name = "depth prepass model global UBO"
                type = "UBO"
                data_size = 128
            }
            {
                name = "Kohi.StorageBuffer.TransformsGlobal"
                type = "SSBO"
            }
            {
                name = "Kohi.StorageBuffer.AnimationsGlobal"
                type = "SSBO"
            }
        ]
    }
]
